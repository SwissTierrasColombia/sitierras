---
interface Props {
  title: string;
  body: string;
  id: string;
  href?: string;
}

const { id, title, body, href } = Astro.props;
---

<div
  class="bg-white border border-gray-200 rounded-lg shadow md:hover:border dark:bg-gray-800 dark:border-gray-700"
>
  <a
    href={id}
    class="border grid place-content-center h-56 bg-gray-50 rounded-tl-lg rounded-tr-lg"
  >
    <slot name="image" />
  </a>
  <div class="p-5 text-center">
    <a href={id}>
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{body}</p>
    <a
      href={href}
      target={href.startsWith("#") ? "_self" : "_blank"}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-sky-800 rounded-lg hover:bg-sky-900 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Acceder
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>
